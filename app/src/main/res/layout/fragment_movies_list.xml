<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:imeOptions="flagNoExtractUi"
    tools:context=".tabs.tab_movies.FragmentMoviesList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_addMovieButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/add_icon_for_button"
            android:foregroundGravity="center"
            android:src="@drawable/add_icon"
            android:background="?selectableItemBackgroundBorderless" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:icon="@android:drawable/ic_menu_search"
            android:imeOptions="flagNoExtractUi"
            android:layoutDirection="rtl"
            android:title="@string/app_name"
            android:visibility="visible"
            app:actionViewClass="android.widget.SearchView"
            app:showAsAction="collapseActionView|ifRoom">

            <requestFocus />
        </androidx.appcompat.widget.SearchView>
    </LinearLayout>


    <TextView
        android:id="@+id/textView_noResults"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_movies_found"
        android:textSize="24sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/moviesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>